extends layout.pug

block content
    script(type="module" src="/js/navbar.js")
    nav(class="navbar")
        div(class="logo-container")

        div(class="search-container" display="flex")
            form(class="nav_search-form")
                input(type="search" name="keywordSearch" placeholder="tacos, pizza, Lou's Place")
                input(type="search" name="locationSearch" placeholder="Chicago, IL")
                button: i(type="submit" class="fa fa-search navbutton")
        div(class="links-container" display="flex")
            div: a(class="write-a-review" href="/search") Find A Restaurant
        div(class="buttons-container" display="flex")
            button(class="nav_sign-up-button navbutton") Sign Up
            button(class="nav_log-in-button navbutton") Log In
            button(class="nav_log-out-button navbutton") Log Out
        div()
