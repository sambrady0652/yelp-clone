mixin signUpFormInput(name, type, placeHolder, value)
    div 
    input(type=type, class="form-control", name=name, placeHolder=placeHolder, required)

mixin settingsFormInput(name, type, value, label, subHeading)
    div
        label(for=id)= label
        p= subHeading
        input(name=name, id=name, type=type, value=value )